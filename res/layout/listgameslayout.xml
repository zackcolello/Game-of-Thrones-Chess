<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gotlistgames"
    android:orientation="vertical" >

    <Button
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/playbackbutton"
        android:layout_alignLeft="@+id/playbackbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/playbackbutton"
        android:layout_alignRight="@+id/playbackbutton"
        android:layout_marginBottom="50dp"
        android:text="@string/back" />

    <Button
        android:id="@+id/playbackbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/backbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="@string/playback" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="56dp"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/sortSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:background="#E6E6E6"
            />

        <ListView
            android:id="@+id/listView1"
            android:layout_width="270dp"
            android:layout_height="180dp"
            android:background ="#ADC2D6" 
            android:choiceMode="singleChoice"
			android:listSelector="#666666" >

        </ListView>
    </LinearLayout>

</RelativeLayout>
