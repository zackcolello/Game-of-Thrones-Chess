<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gotchess"
    android:orientation="vertical" >

    <Button
        android:id="@+id/undobutton"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:text="@string/undobutton"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/aibutton"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/undobutton"
        android:layout_alignLeft="@+id/undobutton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/undobutton"
        android:layout_alignStart="@+id/undobutton"
        android:layout_marginBottom="4dp"
        android:text="@string/aimove"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/homebutton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="@string/homebutton"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/draw"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/homebutton"
        android:layout_alignBottom="@+id/homebutton"
        android:layout_marginLeft="215dp"
        android:layout_marginStart="215dp"
        android:text="@string/draw"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/resign"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/undobutton"
        android:layout_alignLeft="@+id/draw"
        android:layout_alignStart="@+id/draw"
        android:text="@string/resign"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

</RelativeLayout>